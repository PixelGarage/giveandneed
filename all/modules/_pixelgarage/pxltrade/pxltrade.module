/**
 * Session wide data container.
 *
 * @return array Returns the session data array.
 */
function &pxltrade_session_data() {
  if (!isset($_SESSION['pxlTrade'])) {
    $_SESSION['pxlTrade'] = array();
  }
  return $_SESSION['pxlTrade'];
}


